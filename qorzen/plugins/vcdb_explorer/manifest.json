{
  "name": "vcdb_explorer",
  "display_name": "VCdb Explorer",
  "version": "1.0.0",
  "description": "Advanced query tool for exploring Vehicle Component Database",
  "author": {
    "name": "Qorzen Developer",
    "email": "developer@qorzen.com"
  },
  "license": "MIT",
  "capabilities": [
    "ui.extend",
    "event.subscribe",
    "event.publish",
    "config.read",
    "config.write",
    "database.read",
    "file.write"
  ],
  "dependencies": [
    {
      "name": "core",
      "version": ">=0.1.0"
    }
  ],
  "entry_point": "plugin.py",
  "min_core_version": "0.1.0",
  "tags": ["database", "automotive", "query", "vcdb"],
  "extension_points": [],
  "extension_uses": [],
  "config_schema": {
    "fields": [
      {
        "name": "database.host",
        "type": "string",
        "label": "Database Host",
        "description": "PostgreSQL database host",
        "default_value": "192.168.10.234",
        "required": true,
        "order": 1,
        "group": "database"
      },
      {
        "name": "database.port",
        "type": "integer",
        "label": "Database Port",
        "description": "PostgreSQL database port",
        "default_value": 5432,
        "required": true,
        "order": 2,
        "group": "database"
      },
      {
        "name": "database.name",
        "type": "string",
        "label": "Database Name",
        "description": "PostgreSQL database name",
        "default_value": "crown_nexus",
        "required": true,
        "order": 3,
        "group": "database"
      },
      {
        "name": "database.user",
        "type": "string",
        "label": "Database User",
        "description": "PostgreSQL database user",
        "default_value": "initialdb",
        "required": true,
        "order": 4,
        "group": "database"
      },
      {
        "name": "database.password",
        "type": "password",
        "label": "Database Password",
        "description": "PostgreSQL database password",
        "default_value": "B54C3CBADDFSssALK92",
        "required": true,
        "order": 5,
        "group": "database"
      },
      {
        "name": "ui.max_filter_panels",
        "type": "integer",
        "label": "Maximum Filter Panels",
        "description": "Maximum number of filter panels allowed",
        "default_value": 5,
        "required": true,
        "order": 1,
        "group": "ui",
        "validation_rules": [
          {
            "rule_type": "min",
            "parameters": {"value": 1},
            "error_message": "At least one filter panel must be allowed"
          },
          {
            "rule_type": "max",
            "parameters": {"value": 10},
            "error_message": "Maximum of 10 filter panels allowed"
          }
        ]
      },
      {
        "name": "ui.default_page_size",
        "type": "integer",
        "label": "Default Page Size",
        "description": "Default number of rows to display per page",
        "default_value": 100,
        "required": true,
        "order": 2,
        "group": "ui"
      },
      {
        "name": "export.max_rows",
        "type": "integer",
        "label": "Maximum Export Rows",
        "description": "Maximum number of rows allowed for export",
        "default_value": 10000,
        "required": true,
        "order": 1,
        "group": "export"
      }
    ],
    "groups": [
      {
        "name": "database",
        "label": "Database Connection",
        "description": "PostgreSQL database connection settings",
        "order": 1,
        "collapsed": false
      },
      {
        "name": "ui",
        "label": "User Interface",
        "description": "UI configuration settings",
        "order": 2,
        "collapsed": false
      },
      {
        "name": "export",
        "label": "Export Settings",
        "description": "Settings for data export",
        "order": 3,
        "collapsed": false
      }
    ]
  }
}
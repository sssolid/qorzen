{
  "name": "initialdb",
  "display_name": "InitialDB",
  "version": "0.2.0",
  "description": "Vehicle Component Database Plugin",
  "author": {
    "name": "Ryan Serra",
    "email": "dev@example.com",
    "organization": "Qorzen"
  },
  "license": "MIT",
  "capabilities": [
    "ui.extend",
    "event.subscribe",
    "event.publish",
    "config.read",
    "config.write",
    "database.read",
    "database.write",
    "file.read",
    "file.write"
  ],
  "dependencies": [
    {
      "name": "core",
      "version": ">=0.1.0"
    }
  ],
  "entry_point": "plugin.py",
  "min_core_version": "0.1.0",
  "tags": ["database", "vehicle", "automotive", "ACES"],
  "lifecycle_hooks": {
    "pre_install": "initialdb.code.hooks.pre_install",
    "post_install": "initialdb.code.hooks.post_install",
    "pre_uninstall": "initialdb.code.hooks.pre_uninstall",
    "post_uninstall": "initialdb.code.hooks.post_uninstall",
    "pre_update": "initialdb.code.hooks.pre_update",
    "post_update": "initialdb.code.hooks.post_update",
    "post_enable": "initialdb.code.hooks.post_enable",
    "post_disable": "initialdb.code.hooks.post_disable"
  },
  "config_schema": {
    "fields": [
      {
        "name": "connection_string",
        "type": "string",
        "label": "Database Connection String",
        "description": "Connection string for the vehicle database",
        "default_value": "postgresql+asyncpg://initialdb:B54C3CBADDFSssALK92@192.168.10.234:5432/crown_nexus",
        "required": true,
        "order": 1,
        "group": "database"
      },
      {
        "name": "default_query_limit",
        "type": "integer",
        "label": "Default Query Limit",
        "description": "Default maximum number of results to return",
        "default_value": 1000,
        "required": true,
        "order": 2,
        "group": "database",
        "validation_rules": [
          {
            "rule_type": "min",
            "parameters": {"value": 1},
            "error_message": "Query limit must be at least 1"
          },
          {
            "rule_type": "max",
            "parameters": {"value": 10000},
            "error_message": "Query limit cannot exceed 10000"
          }
        ]
      },
      {
        "name": "max_query_limit",
        "type": "integer",
        "label": "Maximum Query Limit",
        "description": "Absolute maximum number of results to return",
        "default_value": 10000,
        "required": true,
        "order": 3,
        "group": "database"
      },
      {
        "name": "ui_refresh_interval_ms",
        "type": "integer",
        "label": "UI Refresh Interval (ms)",
        "description": "How frequently to refresh the UI",
        "default_value": 500,
        "required": true,
        "order": 1,
        "group": "ui"
      },
      {
        "name": "enable_caching",
        "type": "boolean",
        "label": "Enable Caching",
        "description": "Whether to cache database results",
        "default_value": true,
        "required": true,
        "order": 1,
        "group": "performance"
      },
      {
        "name": "cache_timeout",
        "type": "integer",
        "label": "Cache Timeout (seconds)",
        "description": "How long to cache results",
        "default_value": 300,
        "required": true,
        "order": 2,
        "group": "performance"
      },
      {
        "name": "exports_dir",
        "type": "string",
        "label": "Exports Directory",
        "description": "Directory for exported data",
        "default_value": "exports",
        "required": true,
        "order": 1,
        "group": "files"
      },
      {
        "name": "templates_dir",
        "type": "string",
        "label": "Templates Directory",
        "description": "Directory for data templates",
        "default_value": "templates",
        "required": true,
        "order": 2,
        "group": "files"
      },
      {
        "name": "log_level",
        "type": "select",
        "label": "Log Level",
        "description": "Logging verbosity level",
        "default_value": "info",
        "required": true,
        "order": 1,
        "group": "logging",
        "options": [
          {"value": "debug", "label": "Debug"},
          {"value": "info", "label": "Info"},
          {"value": "warning", "label": "Warning"},
          {"value": "error", "label": "Error"},
          {"value": "critical", "label": "Critical"}
        ]
      }
    ],
    "groups": [
      {
        "name": "database",
        "label": "Database Settings",
        "description": "Settings for the database connection",
        "order": 1,
        "collapsed": false
      },
      {
        "name": "ui",
        "label": "UI Settings",
        "description": "Settings for the user interface",
        "order": 2,
        "collapsed": false
      },
      {
        "name": "performance",
        "label": "Performance Settings",
        "description": "Settings affecting plugin performance",
        "order": 3,
        "collapsed": false
      },
      {
        "name": "files",
        "label": "File Locations",
        "description": "Paths for various file operations",
        "order": 4,
        "collapsed": false
      },
      {
        "name": "logging",
        "label": "Logging Settings",
        "description": "Settings for logging and diagnostics",
        "order": 5,
        "collapsed": false
      }
    ]
  }
}